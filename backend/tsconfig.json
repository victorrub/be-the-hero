{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "lib": ["ES6"],
    "allowJs": true,
    "outDir": "./dist",
    "rootDir": "old-src",
    "removeComments": true,
    "strict": true,
    "noImplicitAny": true,
    "noEmitOnError": true,
    "strictNullChecks": true,
    "typeRoots": ["./node_modules/@types", "old-src/@types"],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@controllers/*": ["old-src/controllers/*"],
      "@data/*": ["old-src/data/*"],
      "@loaders/*": ["old-src/loaders/*"],
      "@models/*": ["old-src/models/*"],
      "@services/*": ["old-src/services/*"]
    }
  },
  "include": ["old-src/**/*"]
}
